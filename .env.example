# Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
QUESTDB_URL=http://questdb:9000
QUESTDB_USER=admin
QUESTDB_PASSWORD=your_secure_password

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_secure_password

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=your_secure_admin_password

# Watchtower Configuration
WATCHTOWER_DOCKER_TOKEN=your_watchtower_token

# Traefik Dashboard Authentication (generate with: htpasswd -nb admin password)
TRAEFIK_DASHBOARD_AUTH=admin:$2y$10$your_bcrypt_hash_here

# Let's Encrypt Email (for production SSL)
LETSENCRYPT_EMAIL=your-email@example.com

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Network Configuration
DOMAIN_NAME=your-domain.com
HOST_IP=192.168.1.123